{
  "name": "@clawtoken/node",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "clawtokend": "./dist/daemon.js"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "package": "pnpm build && pkg . --out-path dist/pkg",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint src --max-warnings=0"
  },
  "pkg": {
    "scripts": [
      "dist/daemon.js"
    ],
    "targets": [
      "node20-macos-x64",
      "node20-linux-x64",
      "node20-win-x64"
    ],
    "outputPath": "dist/pkg"
  },
  "dependencies": {
    "@clawtoken/core": "workspace:*",
    "@clawtoken/protocol": "workspace:*",
    "@libp2p/crypto": "^5.1.13",
    "@libp2p/peer-id-factory": "^4.2.4",
    "zod": "^3.24.2"
  }
}
